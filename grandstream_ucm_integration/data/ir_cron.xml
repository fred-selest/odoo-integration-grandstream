<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Scheduled Action: Sync Grandstream Call Logs -->
        <record id="ir_cron_sync_grandstream_calls" model="ir.cron">
            <field name="name">Grandstream: Sync Call Logs</field>
            <field name="model_id" ref="model_grandstream_config"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_calls()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Scheduled Action: Check for Updates -->
        <record id="ir_cron_check_grandstream_updates" model="ir.cron">
            <field name="name">Grandstream: Check for Updates</field>
            <field name="model_id" ref="model_grandstream_update_manager"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_updates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
