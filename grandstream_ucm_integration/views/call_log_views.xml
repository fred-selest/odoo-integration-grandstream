<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Call Log Tree View -->
    <record id="view_grandstream_call_log_tree" model="ir.ui.view">
        <field name="name">grandstream.call.log.tree</field>
        <field name="model">grandstream.call.log</field>
        <field name="arch" type="xml">
            <tree string="Call Logs" default_order="call_date desc">
                <field name="call_date"/>
                <field name="direction" widget="badge"
                       decoration-info="direction == 'inbound'"
                       decoration-success="direction == 'outbound'"
                       decoration-muted="direction == 'internal'"/>
                <field name="call_type" widget="badge"
                       decoration-success="call_type == 'answered'"
                       decoration-danger="call_type == 'missed'"
                       decoration-warning="call_type == 'voicemail'"
                       decoration-muted="call_type == 'busy'"/>
                <field name="caller_number"/>
                <field name="caller_name"/>
                <field name="called_number"/>
                <field name="called_name"/>
                <field name="partner_id"/>
                <field name="duration_formatted"/>
                <field name="has_recording" invisible="1"/>
                <field name="recording_file" widget="binary" filename="recording_filename"
                       attrs="{'invisible': [('has_recording', '=', False)]}"/>
            </tree>
        </field>
    </record>

    <!-- Call Log Form View -->
    <record id="view_grandstream_call_log_form" model="ir.ui.view">
        <field name="name">grandstream.call.log.form</field>
        <field name="model">grandstream.call.log</field>
        <field name="arch" type="xml">
            <form string="Call Details">
                <header>
                    <button name="action_open_partner" type="object" string="Open Contact"
                            class="oe_highlight" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                    <button name="action_download_recording" type="object" string="Download Recording"
                            attrs="{'invisible': ['|', ('recording_url', '=', False), ('has_recording', '=', True)]}"/>
                    <field name="call_type" widget="statusbar"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_partner" type="object"
                                class="oe_stat_button" icon="fa-user"
                                attrs="{'invisible': [('partner_id', '=', False)]}">
                            <field name="partner_id" widget="statinfo" string="Contact"/>
                        </button>
                    </div>

                    <group>
                        <group name="call_info" string="Call Information">
                            <field name="call_id"/>
                            <field name="call_date"/>
                            <field name="direction"/>
                            <field name="ucm_config_id"/>
                        </group>

                        <group name="call_details" string="Call Details">
                            <field name="duration_formatted"/>
                            <field name="duration" invisible="1"/>
                            <field name="talk_duration" invisible="1"/>
                            <field name="disposition"/>
                            <field name="extension"/>
                            <field name="trunk"/>
                        </group>
                    </group>

                    <group>
                        <group name="caller_info" string="Caller Information">
                            <field name="caller_number"/>
                            <field name="caller_name"/>
                        </group>

                        <group name="called_info" string="Called Information">
                            <field name="called_number"/>
                            <field name="called_name"/>
                        </group>
                    </group>

                    <group name="recording" string="Call Recording"
                           attrs="{'invisible': [('has_recording', '=', False)]}">
                        <field name="has_recording" invisible="1"/>
                        <field name="recording_file" widget="binary" filename="recording_filename"
                               options="{'accepted_file_extensions': 'audio/*'}"/>
                        <field name="recording_filename" invisible="1"/>
                    </group>

                    <group name="notes" string="Notes">
                        <field name="notes" nolabel="1" placeholder="Add notes about this call..."/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Call Log Search View -->
    <record id="view_grandstream_call_log_search" model="ir.ui.view">
        <field name="name">grandstream.call.log.search</field>
        <field name="model">grandstream.call.log</field>
        <field name="arch" type="xml">
            <search string="Search Call Logs">
                <field name="caller_number"/>
                <field name="called_number"/>
                <field name="partner_id"/>
                <field name="call_date"/>

                <filter string="Inbound" name="filter_inbound" domain="[('direction', '=', 'inbound')]"/>
                <filter string="Outbound" name="filter_outbound" domain="[('direction', '=', 'outbound')]"/>
                <filter string="Internal" name="filter_internal" domain="[('direction', '=', 'internal')]"/>

                <separator/>

                <filter string="Answered" name="filter_answered" domain="[('call_type', '=', 'answered')]"/>
                <filter string="Missed" name="filter_missed" domain="[('call_type', '=', 'missed')]"/>
                <filter string="Voicemail" name="filter_voicemail" domain="[('call_type', '=', 'voicemail')]"/>

                <separator/>

                <filter string="With Recording" name="filter_has_recording" domain="[('has_recording', '=', True)]"/>
                <filter string="With Contact" name="filter_has_partner" domain="[('partner_id', '!=', False)]"/>
                <filter string="No Contact" name="filter_no_partner" domain="[('partner_id', '=', False)]"/>

                <separator/>

                <filter string="Today" name="filter_today" domain="[('call_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter string="Last 7 Days" name="filter_week" domain="[('call_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="filter_month" domain="[('call_date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Direction" name="group_direction" context="{'group_by': 'direction'}"/>
                    <filter string="Call Type" name="group_call_type" context="{'group_by': 'call_type'}"/>
                    <filter string="Contact" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'call_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Call Log Action -->
    <record id="action_grandstream_call_log" model="ir.actions.act_window">
        <field name="name">Call Logs</field>
        <field name="res_model">grandstream.call.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_week': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No call logs found
            </p>
            <p>
                Call logs will appear here once the synchronization with Grandstream UCM is configured and running.
            </p>
        </field>
    </record>

</odoo>
